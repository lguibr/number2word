{
  "swagger": "2.0",
  "info": {
    "version": "2.0.0",
    "title": "Number to English Converter API",
    "description": "API to convert numbers to words in English."
  },
  "host": "word2vector.luisguilher.me",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/num_to_english/{number}": {
      "get": {
        "summary": "Convert a number to words synchronously",
        "operationId": "syncNumberToEnglish",
        "tags": ["Conversion"],
        "parameters": [
          {
            "name": "number",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The number to convert"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful conversion",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "data": { "$ref": "#/definitions/NumberResponse" }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "error": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "type": { "type": "string" },
                    "help": { "type": "string" }
                  }
                }
              }
            },
            "examples": {
              "application/json": {
                "success": false,
                "error": {
                  "message": "üö´ Oops! It looks like your input ('123abc') isn't quite right. Please make sure it's a valid number. üëç",
                  "type": "validation_error",
                  "help": "Ensure that the input is a numerical value without any non-numeric characters."
                }
              }
            }
          }
        }
      }
    },
    "/num_to_english/": {
      "post": {
        "summary": "Convert a number to words asynchronously",
        "operationId": "asyncNumberToEnglish",
        "tags": ["Conversion"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "number",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NumberRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful conversion",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "data": { "$ref": "#/definitions/NumberResponse" }
              }
            }
          },
          "400": {
            "description": "Invalid input or JSON data",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "error": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "type": { "type": "string" },
                    "help": { "type": "string" }
                  }
                }
              }
            },
            "examples": {
              "application/json": {
                "success": false,
                "error": {
                  "message": "üö´ Oops! It looks like your input ('(*&^%') isn't quite right. Please make sure it's a valid number. üëç",
                  "type": "validation_error",
                  "help": "Ensure that the input is a numerical value without any non-numeric characters."
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "NumberRequest": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string",
          "example": "1234"
        }
      }
    },
    "NumberResponse": {
      "type": "object",
      "properties": {
        "num_in_english": {
          "type": "string",
          "example": "one thousand two hundred thirty-four"
        }
      }
    }
  }
}
